{
    "manifest_version": 3,
    "name": "Newsfax",
    "version": "1.0.0",
    "action": { "default_popup": "index.html" },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:5173/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.tsx"]
        }
    ]
}